<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/match2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mtdialogtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/maple"
                android:text="구매내역"
                android:textAlignment="center"
                android:textColor="@color/match1"
                android:textSize="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/maple"
                        android:gravity="center"
                        android:text="분류"
                        android:textColor="@color/match1"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:weightSum="4"
                        android:gravity="center"
                        android:layout_weight="4">

                        <Spinner
                            android:id="@+id/add_buy_spiner"
                            android:layout_width="0dp"
                            android:autofillHints="선택해주세요"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="4"
                            android:gravity="center"
                            android:padding="5dp" />


                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="@font/maple"
                        android:gravity="center"
                        android:text="항목 명"
                        android:textColor="@color/match1"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/add_buy_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:hint="항목 명을 입력해주세요"
                        android:fontFamily="@font/maple"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textColor="@color/match1" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="@font/maple"
                        android:gravity="center"
                        android:text="수량"
                        android:textColor="@color/match1"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/add_buy_count"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.6"
                        android:digits="0123456789"
                        android:fontFamily="@font/maple"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:hint="수량을 입력해주세요"
                        android:gravity="center"
                        android:maxLines="1"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textColor="@color/match1" />

                    <Button
                        android:id="@+id/add_buy_count_plus"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="0.7"
                        android:background="@drawable/btn_layout"
                        android:fontFamily="@font/maple"
                        android:padding="5dp"
                        android:text="+"
                        android:textColor="@color/match1" />

                    <Button
                        android:id="@+id/add_buy_count_minus"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="0.7"
                        android:background="@drawable/btn_layout"
                        android:fontFamily="@font/maple"
                        android:padding="5dp"
                        android:text="-"
                        android:textColor="@color/match1" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="@font/maple"
                        android:gravity="center"
                        android:text="단가"
                        android:textColor="@color/match1"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/add_buy_price"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:digits="0123456789"
                        android:hint="단가를 입력해주세요"
                        android:fontFamily="@font/maple"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLines="1"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textColor="@color/match1" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ok"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_layout"
                    android:fontFamily="@font/maple"
                    android:text="추가"
                    android:textColor="@color/match1"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_layout"
                    android:fontFamily="@font/maple"
                    android:text="취소"
                    android:textColor="@color/match1"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</layout>