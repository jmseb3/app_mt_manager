<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="buyGood"
            type="com.wonddak.mtmanger.room.BuyGood" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/item_buyall"
        android:padding="5dp"
        android:weightSum="11">

        <TextView
            android:layout_margin="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/maple"
            android:id="@+id/item_buycategory"
            android:gravity="center"
            android:text="@{buyGood.category}"
            android:textColor="@color/match2"
            android:textSize="15dp" />

        <TextView
            android:layout_margin="1dp"
            android:layout_width="0dp"
            android:id="@+id/item_buyname"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/maple"
            android:gravity="center"
            android:text="@{buyGood.name}"
            android:textColor="@color/match2"
            android:textSize="15dp" />

        <TextView
            android:layout_margin="1dp"
            android:layout_width="0dp"
            android:id="@+id/item_buycount"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/maple"
            android:gravity="center"
            android:text="@{String.valueOf(buyGood.count)}"
            android:textColor="@color/match2"
            android:textSize="15dp" />

        <TextView
            android:layout_margin="1dp"
            android:id="@+id/item_buyprice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/maple"
            android:gravity="center"
            bindDecText="@{buyGood.price}"
            android:textColor="@color/match2"
            android:textSize="15dp" />

        <TextView
            android:layout_margin="1dp"
            android:id="@+id/item_buytotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="@font/maple"
            android:gravity="center"
            bindDecText="@{buyGood.price*buyGood.count}"
            android:textColor="@color/match2"
            android:textSize="15dp" />


    </LinearLayout>
</layout>