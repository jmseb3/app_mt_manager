<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="mtViewModel"
            type="com.wonddak.mtmanger.viewModel.MTViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/match1"
        tools:context=".ui.fragments.SettingFragment">

        <LinearLayout
            android:id="@+id/categorysetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/titleline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/titlecateogy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/maple"
                    android:gravity="center"
                    android:text="카테고리관리"
                    android:textColor="@color/match2"
                    android:textSize="25dp" />

                <ImageView
                    android:id="@+id/arrow"
                    bindSetArrow="@{mtViewModel.categoryFoldStatus}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_baseline_arrow_drop_up_24" />
            </RelativeLayout>


            <TextView
                android:id="@+id/underline"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_layout2" />

            <LinearLayout
                android:id="@+id/show_or_notshow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                bindSetArrowDim="@{mtViewModel.categoryFoldStatus}">


                <TextView
                    android:id="@+id/maininfotext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/maintitleline"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/maple"
                    android:gravity="center"
                    android:text="@string/info_text"
                    android:textColor="@color/match2" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/categoryrecycler"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_layout"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2"
                    tools:listitem="@layout/item_category" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="5"
                    android:background="@drawable/btn_layout2"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/add_category_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="4"
                        android:fontFamily="@font/maple"
                        android:hint="추가 카테고리 입력"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/match2" />

                    <Button
                        android:id="@+id/add_category"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/solid_layout2"
                        android:fontFamily="@font/maple"
                        android:gravity="center"
                        android:text="추가"
                        android:textSize="15dp" />


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/sendemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/solid_layout2"
            android:fontFamily="@font/maple"
            android:text="문의하기"
            android:textColor="@color/match2" />

        <Button
            android:id="@+id/buy_no_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sendemail"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toTopOf="@id/sendemail"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/solid_layout2"
            android:fontFamily="@font/maple"
            android:text="광고제거"
            android:textColor="@color/match2" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

