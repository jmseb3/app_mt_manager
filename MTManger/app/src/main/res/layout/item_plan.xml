<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="plan"
            type="com.wonddak.mtmanger.room.Plan" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/item_plan_card_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="4"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/match2"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/match2"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <RelativeLayout
                        android:id="@+id/title_area"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/item_plan_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/maple"
                                android:text="@{plan.nowplantitle}"
                                android:textColor="@color/match1"
                                android:textSize="25dp"
                                tools:text="제목" />

                            <TextView
                                android:id="@+id/item_plan_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/maple"
                                android:text="@{plan.nowday}"
                                android:textColor="@color/match1"
                                android:textSize="17dp"
                                tools:text="2019. 9. 4" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/item_add_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/btn_layout2"
                            android:fontFamily="@font/maple"
                            android:text="사진 추가"
                            android:textColor="@color/match2" />


                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/item_img_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        bindViewDim="@{plan.imgsrc}"
                        android:layout_below="@id/title_area"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/item_plan_img"
                            bindUrlImage="@{plan.imgsrc}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/solid_layout" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/under_text_area"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_below="@+id/item_img_area"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/item_plan_do"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/maple"
                            android:text="@{plan.simpletext}"
                            android:textColor="@color/match1"
                            tools:text="오늘은 여기서 무엇을 할예정입니다." />

                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>